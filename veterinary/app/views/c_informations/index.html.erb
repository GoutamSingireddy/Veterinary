<h1>Listing C Informations</h1>

<table>
  <thead>
    <tr>
      <th>Name of pet</th>
      <th>Type of pet</th>
      <th>Breed</th>
      <th>Pet age</th>
      <th>Pet weight</th>
      <th>Appointment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @c_informations.each do |c_information| %>
      <tr>
        <td><%= c_information.name_of_pet %></td>
        <td><%= c_information.type_of_pet %></td>
        <td><%= c_information.breed %></td>
        <td><%= c_information.Pet_age %></td>
        <td><%= c_information.pet_weight %></td>
        <td><%= c_information.appointment_id %></td>
        <td><%= link_to 'Show', c_information %></td>
        <td><%= link_to 'Edit', edit_c_information_path(c_information) %></td>
        <td><%= link_to 'Destroy', c_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

