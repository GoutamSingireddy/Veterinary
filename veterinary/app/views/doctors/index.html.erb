<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
	<th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Degree</th>
      <th>Years in practice</th>
	  <th>appointment</th>
	  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
	  <td><%= doctor.id %></td>
        <td><%= doctor.name %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.degree %></td>
        <td><%= doctor.years_in_practice %></td>
		<td><%= link_to 'appointment', new_appointment_path %></td>

        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

